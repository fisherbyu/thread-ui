{
	"name": "thread-ui",
	"version": "0.1.1",
	"description": "UI Library for React Applications.",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"module": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"sideEffects": false,
	"scripts": {
		"build": "tsc && npm run build-css",
		"build-css": "npx postcss src/styles/styles.css -o dist/styles/thread.css",
		"clean": "rm -rf dist",
		"prebuild": "npm run clean",
		"pack-to-dist": "npm pack && mkdir -p dist && mv thread-ui-*.tgz dist/",
		"test": "jest",
		"build-tailwind": "npx tailwindcss -i ./src/styles/styles.css -o ./src/styles/thread.css --watch",
		"weave": "npm run clean && npm run build",
		"weave-local": "npm run clean && npm run build && npm run pack-to-dist",
		"build-storybook": "storybook build",
		"storybook": "concurrently \"npm run build-tailwind\" \"storybook dev -p 6006\""
	},
	"files": [
		"dist",
		"!dist/package",
		"!**/*.test.*",
		"!**/*.stories.*"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/fisherbyu/thread-ui.git"
	},
	"keywords": [
		"React",
		"UI"
	],
	"author": "Andrew Fisher",
	"license": "MIT",
	"jest": {
		"modulePaths": [
			"node_modules"
		],
		"moduleFileExtensions": [
			"js",
			"jsx",
			"ts",
			"tsx"
		],
		"moduleDirectories": [
			"node_modules"
		],
		"testEnvironment": "jsdom"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.26.0",
		"@babel/preset-react": "^7.26.3",
		"@babel/preset-typescript": "^7.26.0",
		"@jest/globals": "^29.7.0",
		"@rollup/plugin-commonjs": "^28.0.1",
		"@rollup/plugin-node-resolve": "^15.3.0",
		"@storybook/addon-essentials": "^8.4.7",
		"@storybook/addon-interactions": "^8.4.7",
		"@storybook/addon-onboarding": "^8.4.7",
		"@storybook/addon-webpack5-compiler-swc": "^1.0.5",
		"@storybook/blocks": "^8.4.7",
		"@storybook/react": "^8.4.7",
		"@storybook/react-webpack5": "^8.4.7",
		"@storybook/test": "^8.4.7",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.1.0",
		"@types/node": "^22.4.1",
		"@types/react": "^19.0.1",
		"@types/react-dom": "^19.0.2",
		"autoprefixer": "^10.4.20",
		"babel-jest": "^29.7.0",
		"concurrently": "^9.1.0",
		"jest": "^29.7.0",
		"jest-dom": "^4.0.0",
		"jest-environment-jsdom": "^29.7.0",
		"postcss": "^8.4.49",
		"postcss-cli": "^11.0.0",
		"postcss-prefix-selector": "^2.1.0",
		"prettier": "^3.3.3",
		"react": ">=18.0.0 <20.0.0",
		"react-dom": ">=18.0.0 <20.0.0",
		"react-test-renderer": "^19.0.0",
		"react-testing-library": "^8.0.1",
		"storybook": "^8.4.7",
		"tailwindcss": "^3.4.14",
		"ts-loader": "^9.5.1",
		"typescript": "^5.7.2"
	},
	"peerDependencies": {
		"react": ">=18.0.0 <20.0.0",
		"react-dom": ">=18.0.0 <20.0.0"
	},
	"dependencies": {
		"@phosphor-icons/react": "^2.1.7"
	}
}
