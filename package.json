{
	"name": "thread-ui",
	"version": "1.0.0",
	"description": "Unified UI Library for React Applications.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc && npm run build-css",
		"build-css": "npx postcss src/styles/thread.css -o dist/styles/thread.css",
		"clean": "rm -rf dist",
		"prebuild": "npm run clean",
		"test": "jest",
		"weave": "npm run clean && npm run build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/fisherbyu/thread-ui.git"
	},
	"keywords": [
		"React",
		"UI"
	],
	"author": "Andrew Fisher",
	"license": "MIT",
	"jest": {
		"modulePaths": [
			"node_modules"
		],
		"moduleFileExtensions": [
			"js",
			"jsx",
			"ts",
			"tsx"
		],
		"moduleDirectories": [
			"node_modules"
		],
		"testEnvironment": "jsdom"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.26.0",
		"@babel/preset-react": "^7.26.3",
		"@babel/preset-typescript": "^7.26.0",
		"@jest/globals": "^29.7.0",
		"@rollup/plugin-commonjs": "^28.0.1",
		"@rollup/plugin-node-resolve": "^15.3.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.1.0",
		"@types/node": "^22.4.1",
		"@types/react": "^19.0.0",
		"@types/react-dom": "^19.0.0",
		"autoprefixer": "^10.4.20",
		"babel-jest": "^29.7.0",
		"jest": "^29.7.0",
		"jest-dom": "^4.0.0",
		"jest-environment-jsdom": "^29.7.0",
		"postcss": "^8.4.47",
		"prettier": "^3.3.3",
		"react-test-renderer": "^19.0.0",
		"react-testing-library": "^8.0.1",
		"tailwindcss": "^3.4.14",
		"typescript": "^5.5.4"
	},
	"peerDependencies": {
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	}
}
