{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"outDir": "./dist",
		"declaration": true,
		"sourceMap": true,
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"rootDir": "./src",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},

	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": [
		"node_modules",
		"dist",
		".scripts",
		"**/*.test.*",
		"**/*.stories.*",
		"**/*.scripts.*"
	]
}
